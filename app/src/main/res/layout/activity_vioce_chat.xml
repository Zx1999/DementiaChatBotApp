<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg">

    <com.zhaox.mydementiachatbotmarge.widgets.TitleBarView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:centerTitle="Chatty"
        app:centerTitleColor="#FFF"
        app:leftText=" "
        app:leftTextColor="#FFF"
        app:rightText=" "
        app:rightTextColor="#FFF"
        app:rightDrawable="@drawable/ic_home"
        android:padding="5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/tv_chatty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"

            android:text="我是Chatty，很高兴认识你！"
            android:textColor="#fff"
            android:textSize="24sp"/>

    </ScrollView>


    <ImageButton
        android:id="@+id/start_speak"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_selector"
        android:text="send"/>



    <TextView
        android:id="@+id/tv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_speak"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="你好……"
        android:textColor="#fff"
        android:textSize="20sp"/>
</RelativeLayout>